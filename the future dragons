  <script>
    function showForm(formId) {
      document.getElementById("loginForm").style.display = "none";
      document.getElementById("registerForm").style.display = "none";
      document.getElementById(formId).style.display = "flex";
    }

    function goToProfile() {
      document.getElementById("homePage").style.display = "none";
      document.getElementById("semesterPage").style.display = "flex";
    }

    function showGames(semesterName) {
      document.getElementById("semesterPage").style.display = "none";
      document.getElementById("gamesPage").style.display = "flex";
      document.getElementById("gamesTitle").innerText = semesterName + " - Games";
      let grid = document.getElementById("gamesGrid");
      grid.innerHTML = "";
      for (let i = 1; i <= 10; i++) {
        let link = document.createElement("a");
        link.href = "https://www.google.com";
        link.target = "_blank";
        link.innerText = "Game " + i;
        grid.appendChild(link);
      }
    }

    function showStories() {
      document.getElementById("semesterPage").style.display = "none";
      document.getElementById("storiesPage").style.display = "flex";
      let grid = document.getElementById("storiesGrid");
      grid.innerHTML = "";
      for (let i = 1; i <= 100; i++) {
        let link = document.createElement("a");
        link.href = "https://www.google.com";
        link.target = "_blank";
        link.innerText = "Story " + i;
        grid.appendChild(link);
      }
    }

    function backToProfile() {
      document.getElementById("gamesPage").style.display = "none";
      document.getElementById("storiesPage").style.display = "none";
      document.getElementById("settingsPage").style.display = "none";
      document.getElementById("semesterPage").style.display = "flex";
    }

    // Profile menu toggle
    function toggleProfileMenu() {
      let menu = document.getElementById("profileMenu");
      menu.style.display = menu.style.display === "block" ? "none" : "block";
    }

    // Open settings page
    function openSettings() {
      document.getElementById("semesterPage").style.display = "none";
      document.getElementById("settingsPage").style.display = "flex"; 
      document.getElementById("profileMenu").style.display = "none";
    }

    // Save settings
    function saveSettings() {
      let level = document.getElementById("newLevel").value;
      let password = document.getElementById("confirmPassword").value;
      let file = document.getElementById("newPic").files[0];

      if (!level || !password) {
        alert("Please select a level and enter your password.");
        return;
      }

      // Example password verification
      let correctPassword = "123456"; // Replace with real password check
      if (password !== correctPassword) {
        alert("Incorrect password. Changes not saved.");
        return;
      }

      if (file) {
        let reader = new FileReader();
        reader.onload = function(e) {
          document.getElementById("profileIcon").style.backgroundImage = `url('${e.target.result}')`;
        }
        reader.readAsDataURL(file);
      }

      alert("Profile updated! New level: " + level);
      backToProfile();
    }

    function logout() {
      alert("You have been logged out!");
      location.reload();
    }

    // Floating circles
    for (let i = 0; i < 15; i++) {
      let circle = document.createElement("div");
      circle.classList.add("circle");
      let size = Math.random() * 50 + 20;
      circle.style.width = size + "px";
      circle.style.height = size + "px";
      circle.style.left = Math.random() * window.innerWidth + "px";
      circle.style.animationDuration = (Math.random() * 5 + 5) + "s";
      document.body.appendChild(circle);
    }
  </script>
